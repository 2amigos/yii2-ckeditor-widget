{
    "name": "2amigos/yii2-ckeditor-widget",
    "description": "CKEditor widget for Yii2.",
    "keywords": ["yii", "extension", "widget", "ckeditor"],
    "type": "yii2-extension",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "2amigOS! Consulting Group",
            "email": "hola@2amigos.us",
            "homepage": "http://2amigos.us",
            "role": "Developer"
        }
    ],
    "require" : {
        "php": ">=5.4.0",
        "yiisoft/yii2": "*",
        "ckeditor/ckeditor": "dev-full/stable"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*",
        "scrutinizer/ocular": "~1.1"
    },
    "autoload": {
        "psr-4": {
            "dosamigos\\ckeditor\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "dosamigos\\ckeditor\\tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "asset-installer-paths": {
            "bower-asset-library": "vendor/bower"
        }
    }
}
